@model IEnumerable<BookModelsLayer.Models.items>


<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.kind)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.etag)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.selfLink)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.kind)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.etag)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.selfLink)
        </td>
        <td>
            <div style="padding-top:10px; border-bottom:1px solid lightgray; text-align:center; float:left;height:220px;">
                @{
                    var imgSrc = item.volumeInfo.imageLinks.smallThumbnail;
                }
                <img src="@imgSrc" />

            </div>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
